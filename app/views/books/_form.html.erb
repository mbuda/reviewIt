<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>

  <div class="control-group string optional">
	<div class="controls">
	<% if @book.cover? %>
		<%= image_tag @book.cover_url(:thumb) %>
	<% end %>
	</div>
  </div>

  <div class="form-inputs">
    <%= f.input :cover, label: "Upload file from your disk", as: :file %>
    <%= f.hidden_field :cover_cache %>
    <%= f.input :remote_cover_url, label: "or via url from Internet" %>
    </div>
    <div class="form-inputs">
    <%= f.input :author %>
    <%= f.input :title %>
    <%= f.input :review %>
    <%= f.input :reviewer %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
